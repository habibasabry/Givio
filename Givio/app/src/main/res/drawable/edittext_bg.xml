<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="14dp"/>

    <!-- Optional border (stroke) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- light gray border -->

    <!-- Padding inside -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
