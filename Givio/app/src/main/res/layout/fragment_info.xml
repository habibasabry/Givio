                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Policy Boundaries Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_boundaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/container_boundaries"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CCD1B2EA"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/boundaries_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Policy Limitations / Boundaries"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/boundaries_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Allow only predefined categories (food, clothes, furniture)\nâ€¢ Require photo upload + condition rating\nâ€¢ Require expiration date for food entries\nâ€¢ Add a flag/report system for misuse\nâ€¢ Limit donations to users within 10km radius"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SDG Goals Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sdgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/container_sdgs"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CCD1B2EA"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/sdgs_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sustainable Development Goals (SDGs)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
