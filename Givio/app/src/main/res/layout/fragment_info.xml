<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment"
    android:background="@drawable/list"
    android:layout_marginLeft="-5dp"
    android:layout_marginTop="-5dp">

    <!-- Title -->
    <TextView
        android:id="@+id/info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donation Policies"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/afacad"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/card_green"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:id="@+id/info_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="7dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/info_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">

            <!-- Project Overview Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#CCD1B2EA"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/overview_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About the Project"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/overview_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our donation app connects people who want to give with those in need. By enabling users to donate food, clothes, and household items, we reduce waste while supporting communities."
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item Quality Policy Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_item_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/container_item_quality"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CCD1B2EA"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/item_quality_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item Quality Policy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- Food -->
                    <TextView
                        android:id="@+id/item_food_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ Food"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/item_food_text"
                        android:layout_width="match_parent"
