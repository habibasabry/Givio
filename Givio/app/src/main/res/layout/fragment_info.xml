                        android:layout_height="wrap_content"
                        android:text="ðŸ‘• Clothes"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/item_clothes_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âœ… Like new\nâš  Used but clean\nâŒ Not allowed (torn, stained)\nâž¡ Example: Washed, wearable, no damage"
                        android:layout_marginBottom="8dp" />

                    <!-- Household -->
                    <TextView
                        android:id="@+id/item_household_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ  Household Items"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/item_household_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
